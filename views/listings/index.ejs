<% layout("/layouts/boilerplate") %>
   <body>
    <div class="mt-3">
        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">

          <% for(listing of allListings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-room">

              <div class="card col listing-card">
                <img src="<%=listing.image.url %>" class="card-img-top" id="card-img" alt="listing_image" style="height: 15rem;">
                  <div class="card-img-overlay"></div>
                  <div class="card-body">
                    <p class="card-text">
                      <%=listing.title %> <br>
                      &#8377;<%=listing.price.toLocaleString("en-IN") %>/night
                    </p>
                  </div>
              </div>
            </a>
            <% } %>
        </div>
        </div>
    </body>