<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%=listing.title%></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%=listing.image %>" class="card-img-top" alt="listing_image" style="height: 30vh;">
        <div class="card-body">
          <p class="card-text">
            <%=listing.description %>
              <li> &#8377;<%=listing.price.toLocaleString("en-IN") %>/night</li>
              <li><%=listing.location %></li>
              <li><%=listing.country %></li>
          </p>
          
        </div>
        <div class="row">
            <div class="col-2">

                <form action="/listings/<%=listing._id%>/edit" method="get">
                    <button class="btn btn-dark edit-btn">Edit</button>
                </form>
            </div>
            <br>
            <div class="col">

                <form action="/listings/<%=listing._id%>?_method=delete" method="post">
                    <button class="btn btn-dark del-btn">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="col-8 offset-3">
   <hr>
   <h4>Leave a review</h4>
    <form action="/listings/<%=listing.id%>/reviews" method="post">
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"/>
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="commonet" cols="10" rows="5" class="form-control"></textarea>
        </div>
        <div class="mb-3 mt-3">
            <button class="btn btn-outline-dark">Submit</button>
        </div>
    </form>
</div>
