<% layout('/layouts/boilerplate') %>
<div class="row m-3" style=" justify-content: center;">
  <div class="border rounded bg-light shadow" style="width: 400px; padding: 20px; margin-top: 50px;">
    <h4 class="">Login<a href="/signup"><button class="btn btn-light border" style="margin-left: 220px; border-radius: 25px;">Signup</button></a></h4>
    <hr>
    <div class="col-6 offset-3">
    <form action="/login" method="post">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-outline-dark">Login</button>
    </form>
  </div>
</div>
</div>
