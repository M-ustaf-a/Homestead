<% layout('/layouts/boilerplate') %>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-md-12 col-lg-4">
      <div class="border rounded bg-light shadow p-4" style="height: 25rem;">
        <div class="d-flex justify-content-between align-items-center">
          <h4>Login</h4>
          <a href="/signup">
            <button class="btn btn-light border" style="border-radius: 25px;">Signup</button>
          </a>
        </div>
        <hr>
        <form action="/login" method="post">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required
            />
          </div>
          <button class="btn btn-outline-dark w-100 mt-4">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>
