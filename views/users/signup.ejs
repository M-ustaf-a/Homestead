<% layout('/layouts/boilerplate') %>
<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-12 col-md-8 col-lg-6 col-xl-4">
      <div class="border rounded bg-light shadow p-4" style="height: 30rem;">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5>Signup</h5>
          <a href="/login">
            <button class="btn btn-light border" style="border-radius: 25px;">Login</button>
          </a>
        </div>
        <hr>
        <form action="/signup" method="post">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              name="email"
              id="email"
              type="email"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required
            />
          </div>
          <button class="btn btn-outline-dark w-100 mt-3">Signup</button>
        </form>
      </div>
    </div>
  </div>
</div>
