<% layout('/layouts/boilerplate') %>
<div class="row m-3" style=" justify-content: center;">
  <div class="border rounded bg-light shadow" style="width: 500px; padding: 20px; margin-top: 30px;">
    <div style="display: flex;">
      <h5 class="col-6 mt-1">Signup</h5>
      <a href="/login"><button class="btn btn-light border" style=" border-radius: 25px; margin-left: 150px;">Login</button></a>
    </div>
    <hr>
  <div class="col-6 offset-3">
    <form action="/signup" method="post">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-outline-dark">Signup</button>
    </form>
  </div>
  </div>
</div>
